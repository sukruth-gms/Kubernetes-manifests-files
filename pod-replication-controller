apiVersion: v1
kind: ReplicationController
metadata:
  name: rc-app
  labels:
    name: lrc-app
    app: rc-app
spec:
  replicas: 2
  template:
    metadata:
      name: pod-web
      labels:
        name: web
        type: front-end
    spec:
      containers:
      - name: webcontainer
        image: nginx

